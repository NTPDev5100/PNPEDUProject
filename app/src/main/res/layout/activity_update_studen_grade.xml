<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    android:paddingTop="40dp">
    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/background_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".academic.UpdateStudentGradeActivity">
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#D35100"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="Update Grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#151515"
            android:layout_marginLeft="77dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code:"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:textColor="#151515"
            android:background="#EAE2B7"
            android:id="@+id/EditTextUpdateScoreCodead"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#151515"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 1 :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:textColor="#151515"
            android:background="#EAE2B7"
            android:id="@+id/EditTextUpdateScore1ad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#151515"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 2 :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:textColor="#151515"
            android:background="#EAE2B7"
            android:id="@+id/EditTextUpdateScore2ad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#151515"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 3 :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:textColor="#151515"
            android:background="#EAE2B7"
            android:id="@+id/EditTextUpdateScore3ad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:textColor="#151515"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            android:text="Final :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:textColor="#151515"
            android:background="#EAE2B7"
            android:id="@+id/EditTextUpdateFinalad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#151515"
            android:layout_marginLeft="77dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:textColor="#151515"
            android:id="@+id/EditTextUpdateTotalad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="none"
            android:singleLine="true"
            android:text="0"></EditText>
    </LinearLayout>

    <Button
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/background_btncancel"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonUpdateGradead"
        android:text="Update"></Button>

</LinearLayout>
</ScrollView>