<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    tools:context=".academic.HomeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bghomepnpland">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:textSize="20dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/textviewhello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textColor="#fff"
                    android:layout_below="@id/t1"
                    android:textSize="28dp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.04"/>

                <ImageView
                    android:id="@+id/imagemenu"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/iconimageprofile"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#ff5d9e"
                    >

                    <LinearLayout
                        android:id="@+id/linearSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/subjectpng"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#8f71ff"
                    android:layout_marginLeft="30dp">

                    <LinearLayout
                        android:id="@+id/linearStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/studentpng"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#3fefef"
                    android:layout_marginLeft="30dp">

                    <LinearLayout
                        android:id="@+id/linearTeacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/teacher"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teacher"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"

                >

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    >

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/booksshow"/>

                    <TextView
                        android:id="@+id/tt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject"
                        android:layout_toRightOf="@+id/i1"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"
                        android:letterSpacing="0.03"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subjectshow"
                        android:text="4"
                        android:layout_toRightOf="@+id/i1"
                        android:layout_below="@id/tt1"
                        android:textSize="16dp"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"/>



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:layout_below="@id/r1">

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/classshow"/>

                    <TextView
                        android:id="@+id/tt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:layout_toRightOf="@+id/i2"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"
                        android:letterSpacing="0.03"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/classshow"
                        android:text="2"
                        android:layout_toRightOf="@+id/i2"
                        android:layout_below="@id/tt2"
                        android:textSize="16dp"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:layout_below="@id/r2">

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/studentshow"/>

                    <TextView
                        android:id="@+id/tt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student"
                        android:layout_toRightOf="@+id/i3"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"
                        android:letterSpacing="0.03"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:id="@+id/showcountstudent"
                        android:layout_toRightOf="@+id/i3"
                        android:layout_below="@id/tt3"
                        android:textSize="16dp"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"/>



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:layout_below="@id/r3">

                    <ImageView
                        android:id="@+id/i4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/teachershow"/>

                    <TextView
                        android:id="@+id/tt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher"
                        android:layout_toRightOf="@+id/i4"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"
                        android:letterSpacing="0.03"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/teachershow"
                        android:text="5"
                        android:layout_toRightOf="@+id/i4"
                        android:layout_below="@id/tt4"
                        android:textSize="16dp"
                        android:textColor="#516b9e"
                        android:layout_marginLeft="20dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/layout_navigation_header"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</androidx.drawerlayout.widget.DrawerLayout>