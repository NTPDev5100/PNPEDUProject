<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ACA388"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9E07F"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade Code :"
                    android:textColor="#000000"
                    android:textSize="25dp"></TextView>

                <TextView
                    android:id="@+id/txtScoreCodead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="#000000"
                    android:textSize="25sp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Grade 1 :"
            android:textColor="#151515"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/txtScore1ad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#151515"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Grade 2 :"
            android:textColor="#151515"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/txtScore2ad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#151515"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Grade 3 :"
            android:textColor="#151515"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/txtScore3ad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#151515"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            android:text="Final :"
            android:textColor="#151515"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/txtFinalad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#151515"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            android:text="Total :"
            android:textColor="#151515"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/txtTotalad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="#151515"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btnupdategrade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/background_btncancel"
        android:gravity="center"
        android:text="UPDATE"
        android:textColor="#151515"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>