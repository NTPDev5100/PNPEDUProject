<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    android:paddingTop="50dp">
<LinearLayout
    android:layout_margin="20dp"
    android:background="@drawable/background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".academic.AddSubjectActivity">
    <TextView
        android:textColor="#D35100"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="UPDATE SUBJECT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextUpdateSubjectName"
        android:hint="Subject name"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>
    <EditText
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextUpdateSubjeclesson"
        android:hint="Number of lessons"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>
    <EditText
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextUpdateSubjectTime"
        android:hint="Time"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>
    <Button
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/background_btncancel"
        android:layout_gravity="center"
        android:id="@+id/buttonUpdateSubject"
        android:text="Update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"></Button>

</LinearLayout>
</ScrollView>