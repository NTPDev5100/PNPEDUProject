<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain">
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_white"
        tools:context=".teacher.AddGradeActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD GRADE"
            android:layout_marginTop="60dp"
            android:textColor="#D35100"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="Code :"
                android:textColor="#151515"
                android:textSize="20dp">

            </TextView>

            <EditText
                android:id="@+id/EditTextAddScoreCode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#EAE2B7"
                android:singleLine="true"
                android:text=""
                android:textColor="#151515"></EditText>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#151515"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 1 :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:background="#EAE2B7"
            android:textColor="#151515"
            android:id="@+id/EditTextAddScore1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView

            android:textColor="#151515"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 2 :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:background="#EAE2B7"
            android:textColor="#151515"
            android:id="@+id/EditTextAddScore2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView

            android:textColor="#151515"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 3 :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:background="#EAE2B7"
            android:textColor="#151515"
            android:id="@+id/EditTextAddScore3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:textColor="#151515"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            android:text="Final :"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:background="#EAE2B7"
            android:textColor="#151515"
            android:id="@+id/EditTextAddFinal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#151515"
            android:layout_marginLeft="77dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total :"
            android:textSize="20dp">
        </TextView>

        <EditText

            android:textColor="#151515"
            android:id="@+id/EditTextAddTotal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="none"
            android:singleLine="true"
            android:text="0"></EditText>
    </LinearLayout>

    <Button
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@drawable/background_btncancel"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddGrade"
        android:layout_gravity="center"
        android:text="Add"></Button>

</LinearLayout>
</ScrollView>