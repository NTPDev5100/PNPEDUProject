<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain">
    <LinearLayout
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_white"
        tools:context=".academic.AddClassActivity">
        <TextView
            android:layout_marginTop="60dp"
            android:textColor="#F44336"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Add Class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/EditTextClassName"
            android:hint="Class name"
            android:layout_width="300dp"
            android:layout_height="60dp"></EditText>

        <EditText
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/EditTextClassCode"
            android:hint="Class code"
            android:layout_width="300dp"
            android:layout_height="60dp"></EditText>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/EditTextClassStudyTime"
            android:hint="Study time"
            android:layout_width="300dp"
            android:layout_height="60dp"></EditText>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/EditTextClassSchedule"
            android:hint="Schedule"
            android:layout_width="300dp"
            android:layout_height="60dp"></EditText>
        <EditText
            android:inputType="datetime"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/EditTextClassStartDay"
            android:hint="Start day"
            android:layout_width="300dp"
            android:layout_height="60dp"></EditText>
        <EditText
            android:inputType="datetime"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/EditTextClassEndDay"
            android:hint="End day"
            android:layout_width="300dp"
            android:layout_height="60dp"></EditText>

        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonAddClass"
            android:text="Add"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/background_btncancel"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>


    </LinearLayout>
</ScrollView>